<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="15"
            android:visibility="invisible"/>

        <RelativeLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:background="#ffffff"
            android:layout_weight="85">

            <include layout="@layout/include_top"/>

            <LinearLayout
                android:id="@+id/llGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginHorizontal="12dp"
                android:layout_below="@+id/layoutTop"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/title_sso_app"
                    android:textSize="16dp"
                    android:textColor="#262626"
                    android:fontFamily="@font/oneshinhanmedium"
                    android:layout_marginTop="34dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="16dp">

                    <LinearLayout
                        android:id="@+id/llSectionGroup1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1">

                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="4dp">

                            <RelativeLayout
                                android:id="@+id/rlBtnGroup1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:layout_marginRight="8dp">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/ico_app_sol"/>
                            </RelativeLayout>

                            <ImageView
                                android:id="@+id/ivStatusGroup1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/ico_sso_login"
                                android:layout_gravity="right"
                                android:visibility="gone"/>
                        </FrameLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="9dp">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/oneshinhanlight"
                                android:gravity="center"
                                android:text="@string/sso_appname_bank"
                                android:textSize="12dp"
                                android:textColor="#262626"/>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/llSectionGroup2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1">

                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="4dp">

                            <RelativeLayout
                                android:id="@+id/rlBtnGroup2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:layout_marginRight="8dp">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/ico_app_fan"/>
                            </RelativeLayout>

                            <ImageView
                                android:id="@+id/ivStatusGroup2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/ico_sso_login"
                                android:layout_gravity="right"
                                android:visibility="gone"/>
                        </FrameLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="9dp">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/oneshinhanlight"
                                android:gravity="center"
                                android:text="@string/sso_appname_card"
                                android:textSize="12dp"
                                android:textColor="#262626"/>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/llSectionGroup3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1">

                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="4dp">

                            <RelativeLayout
                                android:id="@+id/rlBtnGroup3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:layout_marginRight="8dp">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/ico_app_ia"/>
                            </RelativeLayout>

                            <ImageView
                                android:id="@+id/ivStatusGroup3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/ico_sso_login"
                                android:layout_gravity="right"
                                android:visibility="gone"/>
                        </FrameLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="9dp">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/oneshinhanlight"
                                android:gravity="center"
                                android:text="@string/sso_appname_investment"
                                android:textSize="12dp"
                                android:textColor="#262626"/>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/llSectionGroup4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1">

                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="4dp">

                            <RelativeLayout
                                android:id="@+id/rlBtnGroup4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:layout_marginRight="8dp">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/ico_app_life"/>
                            </RelativeLayout>

                            <ImageView
                                android:id="@+id/ivStatusGroup4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/ico_sso_login"
                                android:layout_gravity="right"
                                android:visibility="gone"/>
                        </FrameLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="9dp">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/oneshinhanlight"
                                android:gravity="center"
                                android:text="@string/sso_appname_insurance"
                                android:textSize="12dp"
                                android:textColor="#262626"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="18dp"
                    android:background="#f7f7f7">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/sso_message_choose_app"
                        android:textSize="12dp"
                        android:textColor="#262626"
                        android:fontFamily="@font/oneshinhanlight"
                        android:layout_marginTop="17dp"
                        android:layout_marginHorizontal="17dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/sso_message_additional"
                        android:textSize="12dp"
                        android:textColor="#666666"
                        android:fontFamily="@font/oneshinhanlight"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="17dp"
                        android:layout_marginHorizontal="17dp"/>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>
